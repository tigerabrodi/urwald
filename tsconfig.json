{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
    "tsup.config.ts",
    "vitest.config.ts",
    "src/test/vitest.d.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
